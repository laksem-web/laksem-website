---
import Desktop from "../../layouts/Desktop.astro";

import vasanthTest from "./../../assets/people/vasanth.webp";
import rajeshTest from "./../../assets/people/rajesh.webp";
import petiTest from "./../../assets/people/petiTest.webp";
import { Image } from "astro:assets";

const { location } = Astro.props;
---

<Desktop>
  <div class='h-max w-max max-[990px]:hidden'>
    <div
      class='h-max w-max bg-gradient-to-t border-[#444] border-b-[1px] border-t-[1px] from-[#3B1F1F] pb-[8vh] to-[#F4EED9]'
      id='TestimonialSection'
    >
      <div
        class='flex items-center h-max w-screen flex-col pt-[8vh] gap-[1.4vh] pb-[16vh]'
      >
        <span
          class='font-[500] w-[70%] text-center bg-clip-text inline-block text-transparent bg-gradient-to-b text-[6.2vh] leading-[7vh] from-[#000] to-[#3B1F1F]'
        >
          Discover Genuine Country Living: Testimonials from Our {location}
          Farmhouse Guests
        </span><span
          class='text-[1.8vh] font-[400] ml-[1vw] text-start text-[#444]'
        >
          See What Our Guests Have to Say
        </span>
      </div><div class='flex h-max justify-evenly px-[6vw] w-screen'>
        <section
          class='flex h-max flex-col px-[2vw] py-[4vh] bg-[#fff] gap-[4vh] justify-evenly revCard rounded-md shadow-lg w-[28vw] z-[9]'
        >
          <div class='flex h-max w-full justify-between flex-[1]'>
            <svg
              height='32'
              viewBox='0 0 24 24'
              xmlns='http://www.w3.org/2000/svg'
