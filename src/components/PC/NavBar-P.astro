      </div><div
        class='flex h-max w-full justify-between flex-[1] py-[4vh] px-[6vw]
        duration-[.3s]
        ease-in-out
        fill-[#DCDDE0]
        hover:fill-[#FFD23F]
        hover:text-[#FFD23F]
        hover:translate-x-[4%]'
      >
        <div
          class='flex h-max flex-col justify-evenly text-[1.8vh] gap-[1.4vh] max-w-[60vw] text-[#fff]'
        >
          <p class='text-[#fff9]'>
            #24, Topslip Road, Sethumadai Village, Anamalai Taluk,<br
            />Pollachi, Coimbatore, Tamilnadu. Pincode - 642133.
          </p><a href='tel:+91 9894648555' class='text-[#fff9]'
            >+91 9894648555</a
          ><a
            target='_blank'
            href='/blogs/how-to-book-farmstay-in-pollachi-online'
            class='text-[#fff5] text-[2vh] hover:text-[#f1f1f1]'
            >See How to Book Here</a
          >
        </div>
      </div>
    </div>
    <div
      class='absolute to-[rgba(0,0,0,0)] bg-gradient-to-b
    from-[#000000] top-0 via-[#000000] w-screen h-[42vh] opacity-[.7]'
    >
    </div><div
      class='flex items-center h-[14vh] justify-between pt-[10vh] relative w-screen pb-[6vh] px-[6vw]'
    >
      <div
        class='text-[1.8vh] text-[#DCDDE0] border-[#DCDDE0] border-[.4vh] ease-in-out font-[600] rounded-sm shadow-3xl tracking-[.2vw] bg-inherit duration-[.3s] font-[500] hover:border-[#BEB0A7] hover:text-[#BEB0A7] px-[1.8vw] py-[1.4vh] cursor-pointer navOpenPC'
      >
        MENU
      </div><div
        class='flex items-center h-max justify-center flex-col text-[#DCDDE0] w-max pt-[6vh]'
      >
        <a href='/'>
          <Image
            alt='logo'
            class='object-contain w-max z-[1] h-[22vh]'
            decoding='async'
            loading='eager'
            src={logo}
          /></a
        >

        <span class='text-[1.2vh] font-[600]'
          >Sethumadai l Pollachi l Coimbatore</span
        >
      </div><a
        target='_blank'
        onclick="return gtag_report_conversion('https:/wa.link/y13k8n');"
        href='https://wa.link/y13k8n'
        class='convBTN text-[1.8vh] text-[#DCDDE0] border-[#DCDDE0] border-[.4vh] ease-in-out font-[600] rounded-sm shadow-3xl tracking-[.2vw] bg-inherit duration-[.3s] font-[500] hover:border-[#BEB0A7] hover:text-[#BEB0A7] px-[1.8vw] py-[1.4vh]'
        >BOOK</a
      >
    </div>
  </div>

  <script>
    import gsap from "gsap";

    const openMenuBTN_PC = document.querySelector(".navOpenPC");
    const closeMenuBTN_PC = document.querySelector(".menuCloseBTN_PC");

    function openMenu() {
      gsap.to(".menuPagePC", {
        autoAlpha: 1,
        duration: 0.2,
        ease: "power4.in",
      });
    }
    function closeMenu() {
      gsap.to(".menuPagePC", {
        autoAlpha: 0,
        duration: 0.2,
        ease: "power4.out",
      });
    }

    openMenuBTN_PC.addEventListener("click", openMenu);
    closeMenuBTN_PC.addEventListener("click", closeMenu);
  </script>
