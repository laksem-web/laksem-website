---
import Mobile from "../../layouts/Mobile.astro";
import { Image } from "astro:assets";
import HeroMOB from "./../../assets/heroPC.webp";
---

<Mobile>
  <section class='h-max max-w-[100vw] oveflow-x-hidden font-Mullish'>
    <div
      class='flex h-[80vh] w-full flex-col justify-between pt-[1vh] relative'
    >
      <div class='flex h-max flex-col w-full gap-[2vh]'>
        <h1
          class='font-[500] mt-[5.8vh] itallic ml-[5vw] text-[#fff] text-[8.4vw] tracking-[-.1vw] font-Mullish'
        >
          Down To Earth <span class='text-[3vh]'>by Laksem</span>
        </h1><div
          class='flex h-max flex-col w-full gap-[2.8vh] pr-[12vw] tracking-[.1vw]'
        >
          <h3
            class='ml-[] text-[#ececec] ml-[6vw] font-[00] font-Mullish text-[2.2vh]'
          >
            Relax in Luxury of our cob cottage with Eco-Friendly charm.
          </h3><div class='h-max w-max flex flex-col gap-[2vh]'>
            <p
              class='h-max z-[99] ml-[6vw] font-[500] mr-[4vw] text-[#ececec] text-[2vh] tracking-[.1vw] w-[80vw]'
            >
